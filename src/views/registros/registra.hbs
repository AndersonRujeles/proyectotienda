<div class="banner banner-three">
</div>
<div class="login">
        <div class="login-screen">
            <div class="app-title">
                <h1>Registrarse</h1>
            </div>
           
            <div class="login-form">
                 <!-- Sección de notificacion flash
                {{#if notifica}}
                <div class="container p-4">
                 <div class="row">
                      <div class="col-md-4 mx-auto">
              <div class="alert alert-success alert-dismissible fade show" role="alert"> 
              {{notifica}}
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
              </div>
           </div>
         </div>
      </div>
        {{/if}}
                 -->
              <form action="" target="" method="post">
                <div class="control-group">
                <input type="text" class="login-field" value="" placeholder="Nombre" name="nombre" autofocus>
                <label class="login-field-icon fui-user" for="login-name"></label>
                </div>

                <div class="control-group">
                <input type="text" class="login-field" value="" placeholder="Usuario" name="usuario">
                <label class="login-field-icon fui-user" for="login-name"></label>
                </div>
                
                <div class="control-group">
                <input  type="email" pattern="[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*@[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*[.][a-zA-Z]{1,5}" name="correo" placeholder="Correo">
                <label class="login-field-icon fui-user" for="login-name"></label>
                </div>

                <div class="control-group">
                <input type="password" class="login-field" value="" placeholder="Contraseña" name="contrasena">
                <label class="login-field-icon fui-lock" for="login-pass"></label>
                </div>
               
                
              <button class="btn2 btn-primary btn2-large btn2-block" onclick="alert('Registro exitoso')">
               Registrar
              </button>
                  
            </div>
        </div>
    </div>
    
